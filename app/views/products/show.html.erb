<div class='top-info'>
  <h1><%= @product.name %></h1>
  <h3>$<%= @product.cost %></h3>
  <h3>Country of Origin: <%= @product.country_of_origin %></h3>
  
</div>


  <% if @product.reviews.any? %>
  <h2>Reviews:</h2>
  <div id='review-wrap'>
  <ul id='reviews-list'>
    <% @product.reviews.each do |review| %>
      <li>
        <h4><%= link_to "#{review.author}: #{review.rating}", product_review_path(@product, review)%></h4>
        <p><%= review.content_body %></p>
      </li>
    <% end %>
    </ul>
  <% end %>
  
  <div class = 'bottom-settings'>
  <% if current_user && current_user.admin? %>
    <%= button_to "Add a review", new_product_review_path(@product), class: 'btn btn-success' %>
    <%= button_to "Edit", edit_product_path(@product), class: 'btn btn-warning' %>
    <%= button_to "Delete product", product_path(@product), class: 'btn btn-danger',
                                    :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
  <% end %>
    <%= button_to "Return to products", products_path, class: 'btn btn-secondary' %>
  </div>
</div>