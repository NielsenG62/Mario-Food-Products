<!DOCTYPE html>
<html>
  <head>
    <title>Mario's Food Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <li><a href="/"><h1>Mario's Food Store</h1></a></li>
        <li><a href="/">Home</a></li>
        <li><a href="/products/all">Products</a></li>
        <li><%= link_to "Add new product", new_product_path %></li>
        <% if current_user %>
          <li><%= current_user.email %> | <%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign up", new_user_session_path %> | <%= link_to "Sign in", new_user_registration_path %></li>
        <% end %>
      </ul>
    </header>
    <main>
      <div class='container'>
        <%= flash[:alert]%>
        <%= flash[:notice]%>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
